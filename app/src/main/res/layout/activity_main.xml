<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/biz_plugin_weather_shenzhen_bg"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#cd2626"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/cityButton"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:contentDescription="SelectCity"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/title_city" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:text='北京天气'
            android:textColor="@color/white"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:contentDescription="location"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/base_action_bar_action_city" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:contentDescription="share"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/title_share" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:contentDescription="update"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/title_update" />
    </LinearLayout>

    <TextView
        android:id="@+id/cityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/city_name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/updateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_time"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/cityName"
        app:layout_constraintEnd_toEndOf="@id/cityName"
        app:layout_constraintTop_toBottomOf="@+id/cityName" />

    <TextView
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/humidity"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/cityName"
        app:layout_constraintEnd_toEndOf="@id/cityName"
        app:layout_constraintTop_toBottomOf="@+id/updateTime" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="weather indicator"
        app:layout_constraintTop_toBottomOf="@+id/humidity"
        app:layout_constraintStart_toStartOf="@id/cityName"
        app:layout_constraintEnd_toEndOf="@id/cityName"
        app:srcCompat="@drawable/biz_plugin_weather_qing" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="air quality indicator"
        android:scaleType="center"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/biz_plugin_weather_0_50"
        tools:layout_editor_absoluteY="50dp" />

    <TextView
        android:id="@+id/pm2.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/imageView5"
        app:layout_constraintBottom_toTopOf="@id/textView6"
        android:text="PM2.5"
        android:textColor="@color/white"
        android:textSize="15sp"
        tools:layout_editor_absoluteY="50dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/pm2.5"
        app:layout_constraintEnd_toEndOf="@id/pm2.5"
        app:layout_constraintBottom_toBottomOf="@id/imageView5"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="20sp"
        tools:layout_editor_absoluteY="50dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@id/imageView">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空气优"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9月5日 星期六"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/temperture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18℃~31℃"
            android:textColor="@color/white"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/weatherDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多云"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/wind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风力：一级"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>